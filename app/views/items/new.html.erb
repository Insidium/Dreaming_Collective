<h2>Add a new Artwork to your Gallery</h2>
<br>
<%# Form to add new art listing %>
<%= form_with model: @item do |form| %>
    <p>
        <%= label(:name, "Name") %>
        <%= form.text_field :name, required: true, minlength: 1 %>
    </p>
    <p>
        <%= label(:category, "Category") %>
        <%= form.text_field :category %>
    </p>
    <p>
        <%= label(:description, "Description") %>
        <%= form.text_area :description %>
    </p>
    <p>
        <%= form.label :price %>
        <%= form.number_field :price, min: 0, step: "0.01" %>
    </p>
    <p>
       <%= form.label :item_image, "Image"%>
       <%= form.file_field :item_image, accept:'image/png,image/gif,image/jpeg,image/jpg' %>
    </p>
    
    <%= form.submit "Add Art", class: "btn btn-success" %>
<% end %>
<hr>
<p><%= link_to "Back", :back, class: "btn btn-info" %></p>